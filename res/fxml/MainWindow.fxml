<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.MainWindow">
    <children>
        <MenuBar>
            <menus>
                <Menu mnemonicParsing="false" text="Image">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#onClickButtonImage" text="New" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Slider">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#onClickButtonSlider" text="New" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <StackPane prefHeight="150.0" prefWidth="200.0">
            <children>
                <Label text="Station météo !" />
            </children>
        </StackPane>
        <SplitPane dividerPositions="0.4">
            <items>
            <TreeView fx:id="treeViewCaptor" prefHeight="200.0" prefWidth="200.0" />
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <HBox alignment="TOP_CENTER">
                     <children>
                        <ComboBox fx:id="comboBoxType" prefWidth="150.0">
                           <HBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </HBox.margin></ComboBox>
                     </children>
                  </HBox>
                  <HBox>
                     <children>
                        <Label text="Nom du capteur :">
                           <HBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </HBox.margin>
                           <padding>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </padding>
                        </Label>
                        <TextField fx:id="textFieldNom" onKeyReleased="#onEnter">
                           <HBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </HBox.margin>
                           <padding>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </padding>
                        </TextField>
                     </children>
                  </HBox>
                  <HBox>
                     <children>
                        <Label text="Id :">
                           <HBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </HBox.margin>
                           <padding>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </padding>
                        </Label>
                        <Label fx:id="labelId">
                           <HBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </HBox.margin>
                           <padding>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </padding>
                        </Label>
                     </children>
                  </HBox>
               </children>
            </VBox>
            </items>
        </SplitPane>
    </children>
</VBox>
